# Production Environment Template (SAFE TO COMMIT)
# Copy this to .env.production and fill in actual values from GitHub Secrets
ENV=prod
FLASK_ENV=production
FLASK_APP=wsgi.py
PORT=8000

# Database - Configure with managed service credentials
DATABASE_URL=postgresql+psycopg2://PROD_USER:PROD_PASSWORD@prod-db-host:5432/microloans_prod
DB_USER=PROD_USER
DB_PASSWORD=PROD_PASSWORD
DB_NAME=microloans_prod
DB_HOST=prod-db-host
DB_PORT=5432

# Python
PYTHONUNBUFFERED=1
LOG_LEVEL=warn

# Resource Limits
DB_MEM_LIMIT=2g
DB_CPUS=2
API_MEM_LIMIT=2g
API_CPUS=2
RESTART_POLICY=always

# Docker
DOCKERFILE=Dockerfile.prod
API_COMMAND=gunicorn -w 4 -b 0.0.0.0:8000 --timeout 60 --access-logfile - --error-logfile - wsgi:app
