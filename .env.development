# Development Environment - Hot reload with debug logging
ENV=dev
FLASK_ENV=development
FLASK_APP=wsgi.py
PORT=8000

# Database
DATABASE_URL=postgresql+psycopg2://postgres:postgres@db:5432/microloans
DB_USER=postgres
DB_PASSWORD=postgres
DB_NAME=microloans
DB_HOST=db
DB_PORT=5432

# Python
PYTHONUNBUFFERED=1
LOG_LEVEL=debug

# Resource Limits (Development - Lower)
DB_MEM_LIMIT=256m
DB_CPUS=0.25
API_MEM_LIMIT=512m
API_CPUS=0.5
RESTART_POLICY=no

# Docker
DOCKERFILE=Dockerfile
API_COMMAND=gunicorn -w 1 -b 0.0.0.0:8000 --timeout 120 --reload --access-logfile - --error-logfile - wsgi:app
