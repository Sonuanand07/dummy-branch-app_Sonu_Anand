# Production Environment - Optimized for performance and security
# NOTE: Never commit sensitive values. Use GitHub Secrets or managed secret service.
ENV=prod
FLASK_ENV=production
FLASK_APP=wsgi.py
PORT=8000

# Database - Use managed RDS/Cloud SQL in production
DATABASE_URL=postgresql+psycopg2://${DB_USER}:${DB_PASSWORD}@${DB_HOST}:5432/${DB_NAME}
DB_USER=${DB_USER}
DB_PASSWORD=${DB_PASSWORD}
DB_NAME=${DB_NAME}
DB_HOST=${DB_HOST}
DB_PORT=5432

# Python
PYTHONUNBUFFERED=1
LOG_LEVEL=warn

# Resource Limits (Production - High)
DB_MEM_LIMIT=2g
DB_CPUS=2
API_MEM_LIMIT=2g
API_CPUS=2
RESTART_POLICY=always

# Docker
DOCKERFILE=Dockerfile.prod
API_COMMAND=gunicorn -w 4 -b 0.0.0.0:8000 --timeout 60 --access-logfile - --error-logfile - wsgi:app
