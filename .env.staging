# Staging Environment - Pre-production mirror with monitoring
ENV=staging
FLASK_ENV=production
FLASK_APP=wsgi.py
PORT=8000

# Database - Staging Instance
DATABASE_URL=postgresql+psycopg2://postgres:microloans-staging@db:5432/microloans_staging
DB_USER=postgres
DB_PASSWORD=microloans-staging
DB_NAME=microloans_staging
DB_HOST=db
DB_PORT=5432

# Python
PYTHONUNBUFFERED=1
LOG_LEVEL=info

# Resource Limits (Staging - Medium)
DB_MEM_LIMIT=1g
DB_CPUS=1
API_MEM_LIMIT=1g
API_CPUS=1
RESTART_POLICY=unless-stopped

# Docker
DOCKERFILE=Dockerfile.prod
API_COMMAND=gunicorn -w 3 -b 0.0.0.0:8000 --timeout 60 --access-logfile - --error-logfile - wsgi:app
